<div data-bind="template: { name: 'summary-template', foreach: accountsSummary }"></div>

<script type="text/html" id="summary-template">

    <table border="1">
        <thead>
            <tr>
                <th>Account Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <tr data-bind="click: $root.goToAccount">
                <td data-bind="text: Id"></td>
                <td data-bind="text: NickName"></td>
            </tr>
        </tbody>
    </table>

</script>

    <!-- Account Details -->
<div data-bind="with: chosenAccountDetails">
    <label>Account Balance:</label>
    <h4 data-bind="text: Balance"></h4>
</div>
